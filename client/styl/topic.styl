/**
 * 话题相关样式
 * @author heroic
 */

// 话题列表
#topic-list
  .panel-body
    padding-top 0
    padding-bottom 0

  .sorts
    padding 8px 15px
    background #fcfcfc
    font-size 13px

    .fa
      color #999

    .condition
      margin-left 10px
      color #999
      &.active
        color #555
        font-weight bold

  .list-group-item
    .info
      padding-right 36px

      .title
        font-size 16px

      .meta
        color #999
        margin-bottom 1px

        .tag
          .label
            padding .1em .5em .2em
          &:hover
            text-decoration none

        .username
          font-weight bold
          color #777

// 话题详细页面
#topic
  .header
    .title
      h3
        margin-top 0

    .meta
      color #999
      margin 15px 0 0

      .username
        font-weight bold
        color #777

  .content
    border-top 1px solid #dddddd
    margin-top 15px
    padding 15px 15px 0

  .panel-footer
    padding 6px 15px

    .fa
      font-size 1.2em

    a
      margin-right 15px
      color #999

#comment-list
  .panel-body
    padding-top 0
    padding-bottom 0

  .list-group-item
    .action
      a
        color #777

    .meta
      margin-bottom 5px
      padding-right 50px
      color #999

      a
        font-weight bold
        color #777
      span
        margin-left 10px

    .content
      p
        margin-bottom 0

  &.no-comment
    border-style dashed

    .panel-body
      padding-top 15px
      padding-bottom 15px
      text-align center

// 话题编辑器页面
.topic-editor
  .mobile-sep
    margin 6px 0

  .toolbar
    margin-bottom 0

    .wrapper
      background #fdfdfd
      border-radius 4px 4px 0 0
      border 1px solid #cccccc
      border-bottom 0
      padding 5px 10px

    .languages-menu
      border-top-left-radius 0
      border-top-right-radius 0
      font-size 12px

  .editor
    textarea
      border-radius 0 0 4px 4px
      resize vertical