/**
 * 话题相关样式
 * @author heroic
 */

// 话题列表
#topics
  .panel-body
    padding 0

    .sorts
      padding 8px 15px
      border-bottom 1px solid #dddddd
      background #fcfcfc
      font-size 13px

      .fa
        color #999

      .condition
        margin-left 10px
        color #999
        &.active
          color #555
          font-weight bold

    .cell
      padding 8px 10px 1px
      margin-top 0
      border-bottom 1px solid #dddddd
      &:last-child
        border-bottom 0

      .author-avatar
        width 48px

      .title
        font-size 16px

      .info
        padding-right 36px

      .meta
        color #999

        .tag
          &:hover
            text-decoration none

        .username
          font-weight bold
          color #777

// 话题详细页面
#topic
  .header
    border-bottom 1px solid #dddddd
    padding 0 15px 15px

    .author-avatar
      width 64px

    .title
      h3
        margin-top 0

    .meta
      color #999
      margin 15px 0 0

      .username
        font-weight bold
        color #777

  .content
    padding-top 15px

// 话题编辑器页面
.topic-editor
  .mobile-sep
    margin 6px 0

  .toolbar
    margin-bottom 0

    .wrapper
      background #fdfdfd
      border-radius 4px 4px 0 0
      border 1px solid #cccccc
      border-bottom 0
      padding 5px 10px

    .languages-menu
      border-top-left-radius 0
      border-top-right-radius 0
      font-size 12px

  .editor
    textarea
      border-radius 0 0 4px 4px