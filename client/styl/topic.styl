// 话题列表
.topics
  .sorts
    padding 8px 15px
    border-bottom 1px solid #dddddd
    background #fcfcfc
    font-size 13px

    .glyphicon
      color #999

    .condition
      margin-left 10px
      color #999
      &.active
        color #555
        font-weight bold

  .list
    padding 0

  .cell
    padding 8px 10px 1px
    margin-top 0
    border-bottom 1px solid #dddddd
    &:last-child
      border-bottom 0

    .author-avatar
      width 48px

    .title
      font-size 16px

    .info
      padding-right 36px

    .meta
      color #999

      .catalogue
        &:hover
          text-decoration none

      .username
        font-weight bold
        color #777