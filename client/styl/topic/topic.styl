/**
 * 话题详细页面的样式
 * @author heroic
 */

#topic.panel
  .entry
    .meta
      .gravatar
        width 32px
        display inline-block
        margin-right 10px

        > img
          max-width 100%
          height auto
          border-radius 50px
          vertical-align middle

    #comment
      margin 16px 0

      .comment-editor
        width 40%
        position relative
        margin-bottom 10px
        @media (max-width: 40em)
          width 100%

        textarea
          width 100%

        .backdrop
          position absolute
          width 100%
          height 100%
          z-index 999
          cursor not-allowed

          + .editor
            .toolbar
              background-color #eaeded

        .editor
          width 100%

    .comment-list
      margin 2em -2em 0.6em
      @media (max-width: 40em)
        margin-right -.5em
        margin-left -.5em

      .item
        padding 1em 2em
        @media (max-width: 40em)
          padding 1em .5em

        .meta
          margin 0

        .content
          margin-top 10px
          font-size 0.9em

          img
            max-width 100%
            height auto
            padding 4px

      .item.odd
        background #f2f2f2