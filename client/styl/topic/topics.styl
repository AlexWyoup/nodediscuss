/**
 * 社区话题列表页面样式
 * @author heroic
 */

#topics.panel
  > .heading
    overflow hidden

    h3
      float left

    .tag-favorite
      font-size 0.7em

      > a
        margin-left 10px

        &:hover,
        &:focus
          text-decoration none
          color rgb(243, 123, 29)

      > cite
        color #aaa
        font-weight normal

    .filter-nav
      float right
      display inline-block
      margin-right 10px
      font-size 0.8em

      > li
        display inline-block

        .divide
          color #aaa
          margin 0 5px
          font-size 0.7em
      > li.active > a
        color #888
        text-decoration none