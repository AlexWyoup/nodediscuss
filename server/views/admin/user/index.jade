extends ../layout
block container
  div.panel.panel-default
    div.panel-heading
      span 用户列表
    table.table.table-bordered.table-striped
      thead
        tr
          th 用户名
          th 电子邮箱
          th 昵称
          th 状态
          th 是否信任用户
          th 话题数量
          th 粉丝数量
          th
      tbody
        each user in users
          tr
            td #{user.username}
            td #{user.email}
            td #{user.nickname}
            td
              if user.state.activated
                | 已激活
              if user.state.blocked
                | 已锁定
            td #{user.verified ? "是" : "否"}
            td #{user.topicCount}
            td #{user.followerCount}
            td
              div.btn-group
                a(href="/admin/users/#{user.username}/edit").btn.btn-default.btn-xs
                  i.fa.fa-pencil
                  | &#32;编辑
                if user.verified
                  a(href="#", title="设置为非信任用户").btn.btn-primary.btn-xs
                    i.fa.fa-level-down
                    | &#32;取消信任
                else
                  a(href="#", title="设置为信任用户").btn.btn-primary.btn-xs
                    i.fa.fa-level-up
                    | &#32;信任
                if user.state.blocked
                  a(href="#", title="锁定该用户").btn.btn-warning.btn-xs
                    i.fa.fa-unlock
                    | &#32;解除锁定
                else
                  a(href="#", title="锁定该用户").btn.btn-warning.btn-xs
                    i.fa.fa-lock
                    | &#32;锁定
    div.panel-footer
      include ../../shared/pagination