extends ../layout
block content
  div#favorite-tags.panel.panel-default
    div.panel-heading
      include ../shared/breadcrumb
    if currentUser.favoriteTagCount <= 0
      div.panel-body
        span 暂无节点收藏。
    else
      div.panel-body
        ul.list-inline.tags
          each tag in tags
            li: a(href="/tag/#{tag.name}")
              span.label.label-default #{tag.name}
      ul.list-group.topic-list
        each topic in topics
          li.list-group-item
            include ../shared/topic_list_item
        li.list-group-item
          include ../shared/pagination
block sidebar
  include ../sidebar/user_card
  include ../sidebar/related_site
  include ../sidebar/ad