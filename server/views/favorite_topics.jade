extends layout
block content
  div.panel.panel-default
    div.panel-heading
      include breadcrumb
    if loggedUser.favoriteTopicCount <= 0
      div.panel-body
        span 你还没有收藏过话题。
    else
      ul.list-group.topic-list
        for topic in topics
          li.list-group-item
            include topic_list_item
block sidebar
  include ./sidebar/user_card
  include ./sidebar/top_tags
  include ./sidebar/related_site
  include ./sidebar/ad