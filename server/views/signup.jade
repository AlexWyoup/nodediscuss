extends layout
block content
  div.panel.panel-default
    div.panel-heading
      include breadcrumb
    div.panel-body
      include error_alert
      form(role="form", method="POST", action="/signup").form-horizontal
        div.form-group
          label(for="email").col-sm-3.control-label Email
          div.col-sm-6
            input(type="email", name="email", value="#{email || ''}", required)#email.form-control
            span.help-block 请使用真实电子邮箱注册，注册后不可修改
        div.form-group
          label(for="username").col-sm-3.control-label 用户名
          div.col-sm-6
            input(type="text", name="username", value="#{username || ''}", maxlength="16", required)#username.form-control
            span.help-block 请使用长度为 6-16 的字母 a-z 或数字 0-9 ，注册后不可修改
        div.form-group
          label(for="password").col-sm-3.control-label 密码
          div.col-sm-6
            input(type="password", name="password", required)#password.form-control
        div.form-group
          label(for="repassword").col-sm-3.control-label 确认密码
          div.col-sm-6
            input(type="password", name="repassword", required)#repassword.form-control
        div.form-group
          div.col-sm-offset-3.col-sm-6
            input(type="hidden", name="_csrf", value="#{csrfToken}")
            button(type="submit").btn.btn-primary 注册
block sidebar
  include ./sidebar/about
  include ./sidebar/ad
block script
  script(type="text/javascript").
    NC.loadModule({
      name: 'SignupForm',
      el: 'form'
    });