extends layout
block content
  div.topics
    div.panel.panel-default
      div.panel-heading
        div.row
          div.col-xs-10.col-sm-10
            include breadcrumb
          div.col-xs-2.col-sm-2
            if isAuthenticated
              a(href="/topic/create").btn.btn-default.btn-xs.pull-right 发表话题
      div.panel-body.list
        div.sorts
          div.pull-right
            span.fa.fa-sort-amount-desc
            a(href="#").condition.active: span 默认
            a(href="#").condition: span 优质话题
            a(href="#").condition: span 无人回复
            a(href="#").condition: span 最新创建
          div.clearfix
        for topic in topics
          include topic_cell
  include tags
block sidebar
  if isAuthenticated
    include ./sidebar/user_card
  else
    include ./sidebar/about
  include ./sidebar/top_tags
  include ./sidebar/related_site
  include ./sidebar/ad